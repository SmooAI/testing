{
    "compilerOptions": {
        "lib": ["ES2023"],
        "outDir": "./dist",
        "types": ["node"],
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "tsup.config.ts", "tsup.cli.config.ts"],
    "exclude": ["dist", "node_modules"]
}
