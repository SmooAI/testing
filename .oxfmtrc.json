{
    "printWidth": 160,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "experimentalSortImports": {
        "groups": [["builtin"], ["external"], ["internal"], ["parent", "sibling", "index"]],
        "internalPattern": ["@smooai/"],
        "newlinesBetween": false,
        "order": "asc"
    },
    "experimentalSortPackageJson": true
}
